<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">


    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="54dp" tools:layout_editor_absoluteY="216dp" android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/homepage">
        <Button
                android:text="Login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/login_home" android:layout_weight="1"
                android:gravity="center"/>
        <Button
                android:text="signup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/signup_home" android:layout_weight="1"
                android:gravity="center"/>
    </LinearLayout>


<include

    android:visibility="gone"
    layout="@layout/signup"
    />

    <include

        android:visibility="gone"
        layout="@layout/login"/>




</RelativeLayout>